@model Topluluk_Yonetim.MVC.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
        <div class="mb-6">
            <a asp-action="Profile" class="inline-flex items-center text-sm text-secondary hover:text-secondary/80 transition-colors mb-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Profile Dön
            </a>
            <h1 class="text-3xl font-bold text-primary">Şifre Değiştir</h1>
            <p class="text-gray-600 mt-2">Güvenliğiniz için güçlü bir şifre kullanın.</p>
        </div>

        <form asp-action="ChangePassword" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 border border-red-200 rounded-lg p-4"></div>

            <!-- Current Password -->
            <div>
                <label asp-for="CurrentPassword" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.CurrentPassword)
                </label>
                <div class="relative">
                    <input asp-for="CurrentPassword" id="currentPassword" type="password" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 pr-10 focus:border-secondary focus:outline-none transition-colors" />
                    <button type="button" onclick="togglePassword('currentPassword', 'currentEyeIcon', 'currentEyeOffIcon')" class="absolute right-3 top-3 text-gray-400 hover:text-secondary transition-colors">
                        <svg id="currentEyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <svg id="currentEyeOffIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0L3 3m3.59 3.59L12 12m-5.41-5.41L12 12"></path>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- New Password -->
            <div>
                <label asp-for="NewPassword" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.NewPassword)
                </label>
                <div class="relative">
                    <input asp-for="NewPassword" id="newPassword" type="password" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 pr-10 focus:border-secondary focus:outline-none transition-colors" />
                    <button type="button" onclick="togglePassword('newPassword', 'newEyeIcon', 'newEyeOffIcon')" class="absolute right-3 top-3 text-gray-400 hover:text-secondary transition-colors">
                        <svg id="newEyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <svg id="newEyeOffIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0L3 3m3.59 3.59L12 12m-5.41-5.41L12 12"></path>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Confirm Password -->
            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.ConfirmPassword)
                </label>
                <div class="relative">
                    <input asp-for="ConfirmPassword" id="confirmPassword" type="password" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 pr-10 focus:border-secondary focus:outline-none transition-colors" />
                    <button type="button" onclick="togglePassword('confirmPassword', 'confirmEyeIcon', 'confirmEyeOffIcon')" class="absolute right-3 top-3 text-gray-400 hover:text-secondary transition-colors">
                        <svg id="confirmEyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <svg id="confirmEyeOffIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0L3 3m3.59 3.59L12 12m-5.41-5.41L12 12"></path>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Submit Button -->
            <div class="flex gap-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:-translate-y-0.5">
                    Şifreyi Değiştir
                </button>
                <a asp-action="Profile" class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    function togglePassword(inputId, eyeIconId, eyeOffIconId) {
        const passwordInput = document.getElementById(inputId);
        const eyeIcon = document.getElementById(eyeIconId);
        const eyeOffIcon = document.getElementById(eyeOffIconId);
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.classList.add('hidden');
            eyeOffIcon.classList.remove('hidden');
        } else {
            passwordInput.type = 'password';
            eyeIcon.classList.remove('hidden');
            eyeOffIcon.classList.add('hidden');
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

