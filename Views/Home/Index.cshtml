                    <p class="text-gray-600 text-lg mb-8">
                        Öðrenci topluluklarýný yönetmek ve etkinliklerinizi organize etmek için sisteme giriþ yapýn.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a asp-controller="Account" asp-action="Login" class="bg-gradient-to-r from-primary to-secondary text-white px-8 py-4 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:-translate-y-0.5">
                            Giriþ Yap
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="border-2 border-primary text-primary px-8 py-4 rounded-lg font-semibold hover:bg-primary hover:text-white transition-all duration-300">
                            Kayýt Ol
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Authenticated - show dashboard -->
    <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h1 class="text-3xl font-bold text-primary mb-4">Hoþ Geldiniz</h1>
