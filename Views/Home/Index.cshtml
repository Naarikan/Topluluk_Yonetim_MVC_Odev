@{
    ViewData["Title"] = "Ana Sayfa";
    var isAuthenticated = User?.Identity?.IsAuthenticated == true;
    if (!isAuthenticated)
    {
        ViewData["FullWidth"] = true;
    }
}

@if (!isAuthenticated)
{
    <!-- Not authenticated - show welcome page with login/register -->
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary via-primary/90 to-secondary relative overflow-hidden">
        <!-- Animated background -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary/90 to-secondary animate-gradient bg-[length:400%_400%]"></div>
        
        <!-- Floating circles -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
            <div class="absolute -top-1/2 -left-1/2 w-[200%] h-[200%] bg-radial-gradient from-secondary/10 to-transparent animate-float"></div>
        </div>
        
        <!-- Welcome Card -->
        <div class="relative z-10 w-full max-w-2xl mx-4">
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden animate-slide-up">
                <div class="px-10 py-12 text-center">
                    <h1 class="text-4xl font-bold text-primary mb-4">
                        <span class="text-secondary">•</span>
                        Topluluk Yönetim Sistemi
                        <span class="text-secondary">•</span>
