@model Topluluk_Yonetim.MVC.Models.ViewModels.MembershipApplyViewModel
@{
    ViewData["Title"] = "Üyelik Başvurusu";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-primary">Aktif Topluluklara Üye Ol</h1>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Clubs Grid -->
    @if (Model.ActiveClubs != null && Model.ActiveClubs.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var club in Model.ActiveClubs)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 @(!club.CanApply ? "opacity-75" : "")">
                    <div class="p-6">
                        <!-- Club Header -->
                        <div class="mb-4">
                            <h3 class="text-xl font-bold text-primary mb-2">@club.Name</h3>
                            @if (!string.IsNullOrEmpty(club.Description))
                            {
                                <p class="text-gray-600 text-sm line-clamp-3 mb-3">@club.Description</p>
                            }
                        </div>

                        <!-- Club Details -->
                        <div class="space-y-2 mb-4 text-sm">
                            @if (!string.IsNullOrEmpty(club.AdvisorName))
                            {
                                <div class="flex items-center gap-2 text-gray-700">
                                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <span class="font-medium">Danışman:</span>
                                    <span>@club.AdvisorName</span>
                                </div>
                            }
                            <div class="flex items-center gap-2 text-gray-700">
                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span class="font-medium">Başkan:</span>
                                <span>@club.PresidentName</span>
                            </div>
                        </div>

                        <!-- Status Message or Apply/Cancel Buttons -->
                        @if (!string.IsNullOrEmpty(club.StatusMessage))
                        {
                            var statusClass =
                                club.StatusMessage.Contains("Bekleyen")   ? "bg-yellow-50 border border-yellow-200 text-yellow-800" :
                                club.StatusMessage.Contains("üyesiniz")   ? "bg-blue-50 border border-blue-200 text-blue-800" :
                                club.StatusMessage.Contains("iptal")      ? "bg-gray-50 border border-gray-200 text-gray-800" :
                                                                              "bg-gray-50 border border-gray-200 text-gray-800";
                            <div class="mt-4 p-3 rounded-lg @statusClass">
                                <p class="text-sm font-medium">@club.StatusMessage</p>
                            </div>
                        }

                        @if (club.CanApply)
                        {
                            <form asp-action="Apply" method="post" class="mt-4">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="clubId" value="@club.Id" />
                                <button type="submit" class="w-full bg-gradient-to-r from-primary to-secondary text-white px-4 py-2 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:-translate-y-0.5 flex items-center justify-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    Başvur
                                </button>
                            </form>
                        }
                        else if (club.CanCancel)
                        {
                            <form asp-action="Cancel" method="post" class="mt-4" onsubmit="return confirm('Bu topluluğa yaptığınız başvuruyu iptal etmek istediğinize emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="clubId" value="@club.Id" />
                                <button type="submit" class="w-full bg-red-50 text-red-700 px-4 py-2 rounded-lg font-semibold hover:bg-red-100 transition-all duration-300 flex items-center justify-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    Başvuruyu İptal Et
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <p class="text-gray-600 text-lg">Şu anda aktif topluluk bulunmamaktadır.</p>
        </div>
    }
</div>

