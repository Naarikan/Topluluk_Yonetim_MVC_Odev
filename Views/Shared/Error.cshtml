@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-primary/90 to-secondary/60 py-16">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl p-10 text-center">
        <div class="flex flex-col items-center gap-6">
            <div class="w-20 h-20 rounded-full bg-red-100 flex items-center justify-center">
                <svg class="w-10 h-10 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                     stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 8v4m0 4h.01M21 12.79A9 9 0 1 1.21 12a9 9 0 1 1 19.79 0 9 9 0z" />
                </svg>
            </div>

            <div>
                <p class="text-sm font-semibold text-secondary tracking-[0.35em] uppercase">Hata @Model.StatusCode</p>
                <h1 class="text-3xl font-bold text-gray-900 mt-2">@Model.Title</h1>
                <p class="text-gray-600 mt-3">@Model.Message</p>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="bg-gray-100 text-gray-600 text-sm rounded-lg px-4 py-2">
                    Takip Kodu: <span class="font-mono">@Model.RequestId</span>
                </div>
            }

            <div class="flex flex-col sm:flex-row gap-4 mt-6">
                <a href="/" class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-lg shadow hover:bg-black transition">
                    Ana Sayfaya Dön
                </a>
                <a href="mailto:support@example.com" class="inline-flex items-center justify-center px-6 py-3 border border-gray-200 rounded-lg text-gray-700 hover:bg-gray-100">
                    Destek Ekibiyle Ýletiþime Geç
                </a>
            </div>
        </div>
    </div>
</div>
