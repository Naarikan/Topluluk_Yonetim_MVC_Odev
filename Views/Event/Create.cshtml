@model Topluluk_Yonetim.MVC.Models.ViewModels.EventCreateViewModel
@{
    ViewData["Title"] = "Etkinlik Başvurusu";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary mb-2">Yeni Etkinlik Başvurusu</h1>
            <p class="text-gray-600">Etkinlik düzenlemek için aşağıdaki formu doldurunuz.</p>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 border border-red-200 rounded-lg p-4"></div>

            <input type="hidden" asp-for="ClubId" />

            <!-- Title -->
            <div>
                <label asp-for="Title" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.Title)
                </label>
                <input asp-for="Title" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="Etkinlik başlığını giriniz" />
                <span asp-validation-for="Title" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Description -->
            <div>
                <label asp-for="Description" class="block text-sm font-semibold text-primary mb-2">
                    @Html.DisplayNameFor(m => m.Description)
                </label>
                <textarea asp-for="Description" rows="4" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="Etkinlik açıklamasını giriniz"></textarea>
                <span asp-validation-for="Description" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Event Date -->
            <div>
                <label asp-for="EventDate" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.EventDate)
                </label>
                @{
                    var localDate = Model.EventDate.Kind == DateTimeKind.Utc 
                        ? Model.EventDate.ToLocalTime() 
                        : Model.EventDate;
                }
                <input asp-for="EventDate" type="datetime-local" value="@localDate.ToString("yyyy-MM-ddTHH:mm")" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 focus:border-secondary focus:outline-none transition-colors" />
                <span asp-validation-for="EventDate" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Estimated Budget -->
            <div>
                <label asp-for="EstimatedBudget" class="block text-sm font-semibold text-primary mb-2">
                    <span class="text-secondary">*</span> @Html.DisplayNameFor(m => m.EstimatedBudget)
                </label>
                <div class="relative">
                    <span class="absolute left-4 top-3 text-gray-500">₺</span>
                    <input asp-for="EstimatedBudget" type="number" step="0.01" min="0" class="w-full border-2 border-gray-300 rounded-lg pl-8 pr-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="0.00" />
                </div>
                <span asp-validation-for="EstimatedBudget" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Submit Button -->
            <div class="flex gap-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:-translate-y-0.5">
                    Başvur
                </button>
                <a asp-action="Index" class="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

