@model Topluluk_Yonetim.MVC.Models.ViewModels.ClubListPageViewModel
@{
    ViewData["Title"] = "Topluluk Başvurusu";
}

<div class="space-y-6">
    <!-- Header with Create Button -->
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <h1 class="text-3xl font-bold text-primary text-center sm:text-left">Topluluklar</h1>
        <a asp-action="Create" class="w-full sm:w-auto inline-flex justify-center bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 hover:-translate-y-0.5">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>Başvuru Yap</span>
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Filters -->
    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
        <form method="get" asp-action="Index" class="grid grid-cols-1 md:grid-cols-4 gap-3">
            <div>
                <label class="block text-xs text-gray-500 mb-1">Arama</label>
                <input name="Search" value="@Model.Filter.Search" class="w-full rounded-lg border-gray-200" placeholder="Topluluk / açıklama / başkan" />
            </div>
            <div class="flex items-end gap-2">
                <input type="hidden" name="PageNumber" value="1" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" name="OnlyActive" value="true" class="rounded border-gray-300 text-secondary focus:ring-secondary" checked="@(Model.Filter.OnlyActive)" />
                    <label class="text-sm text-gray-700">Sadece aktif</label>
                </div>
            </div>
            <div>
                <label class="block text-xs text-gray-500 mb-1">Sayfa Boyutu</label>
                <select name="PageSize" class="w-full rounded-lg border-gray-200">
                    @foreach (var size in new[] {10,20,50})
                    {
                        <option value="@size" selected="@(Model.Filter.PageSize == size)">@size</option>
                    }
                </select>
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-primary text-white rounded-lg px-4 py-2 font-semibold hover:bg-secondary transition">Filtrele</button>
            </div>
        </form>
    </div>

    <!-- Clubs Grid -->
    @if (Model.Clubs != null && Model.Clubs.Items.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var club in Model.Clubs.Items)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-200">
                    <div class="p-6">
                        <!-- Club Header -->
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-primary mb-1">@club.Name</h3>
                                @if (!string.IsNullOrEmpty(club.Description))
                                {
                                    <p class="text-gray-600 text-sm line-clamp-2">@club.Description</p>
                                }
                            </div>
                            @if (club.IsActive)
                            {
                                <span class="bg-green-100 text-green-800 text-xs font-semibold px-2 py-1 rounded-full">Aktif</span>
                            }
                            else
                            {
                                <span class="bg-gray-100 text-gray-800 text-xs font-semibold px-2 py-1 rounded-full">Pasif</span>
                            }
                        </div>

                        <!-- Club Details -->
                        <div class="space-y-2 text-sm text-gray-600">
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span><strong>Başkan:</strong> @club.PresidentName</span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(club.AdvisorName))
                            {
                                <div class="flex items-center gap-2">
                                    <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    <span><strong>Danışman:</strong> @club.AdvisorName</span>
                                </div>
                            }
                            
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                <span><strong>Üye Sayısı:</strong> @club.MemberCount</span>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span><strong>Kuruluş:</strong> @club.CreatedAt.ToString("dd.MM.yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Henüz topluluk bulunmamaktadır</h3>
            <p class="text-gray-500 mb-6">İlk topluluğu oluşturmak için yukarıdaki "Başvuru Yap" butonuna tıklayın.</p>
            <a asp-action="Create" class="inline-block bg-gradient-to-r from-primary to-secondary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300">
                Başvuru Yap
            </a>
        </div>
    }

    @if (Model.Clubs != null && (Model.Clubs.HasPrevious || Model.Clubs.HasNext))
    {
        <div class="flex items-center justify-between bg-white border border-gray-200 rounded-lg px-6 py-4">
            <div class="text-sm text-gray-500">Sayfa @Model.Clubs.PageNumber / @Model.Clubs.TotalPages</div>
            <div class="flex gap-2">
                @if (Model.Clubs.HasPrevious)
                {
                    <a asp-action="Index" asp-route-PageNumber="@(Model.Clubs.PageNumber - 1)" asp-route-PageSize="@Model.Filter.PageSize" asp-route-Search="@Model.Filter.Search" asp-route-OnlyActive="@Model.Filter.OnlyActive" class="px-3 py-2 rounded-lg border text-sm text-gray-700 hover:bg-gray-100">Önceki</a>
                }
                @if (Model.Clubs.HasNext)
                {
                    <a asp-action="Index" asp-route-PageNumber="@(Model.Clubs.PageNumber + 1)" asp-route-PageSize="@Model.Filter.PageSize" asp-route-Search="@Model.Filter.Search" asp-route-OnlyActive="@Model.Filter.OnlyActive" class="px-3 py-2 rounded-lg border text-sm text-gray-700 hover:bg-gray-100">Sonraki</a>
                }
            </div>
        </div>
    }
</div>

